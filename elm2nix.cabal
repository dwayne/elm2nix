cabal-version: 3.0
name: elm2nix
version: 0.1.0.0

executable elm2nix
    main-is: Main.hs

    other-modules:
        Dependency,
        ElmJson,
        Version

    default-language: Haskell2010
    build-depends:
        aeson,
        base,
        containers,
        indexed-traversable,
        text

test-suite elm2nix-tests
    type: exitcode-stdio-1.0
    main-is: Spec.hs

    default-language: Haskell2010
    build-depends:
        base,
        hspec
